<h4>Books</h4>
<%= render :partial => 'layouts/flash' %>
<%= link_to "New Book", new_book_path, :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
<p>
<div>
  <% @books.each do |book| %>
      <div class="card-square mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand" style="background: url('<%= book.photo_url %>')">
          <h2 class="mdl-card__title-text"><%= book.title %></h2>
        </div>
        <div class="mdl-card__supporting-text">
          $<%= book.price %>0
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <%= link_to "More Details", book_path(id: book.id),
          class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        </div>
      </div>
    <% end %>
</div>
