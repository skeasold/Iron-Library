<h4>Authors</h4>
<%= render :partial => 'layouts/flash' %>
<%= link_to "New Author", new_author_path, :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
<p>
<div>
  <% @authors.each do |author| %>
      <div class="card-square mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand" style="background: url('')">
          <h2 class="mdl-card__title-text"><%= author.first_name %> <% author.last_name %></h2>
        </div>
        <div class="mdl-card__supporting-text">
          <%= author.bio %>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <%= link_to "More Details", author_path(id: author.id),
          class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        </div>
      </div>
    <% end %>
</div>
